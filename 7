DECLARE
 D_ITEM_NO ITEMSS.ITEM_NO%TYPE;
 D_ITEM_NAME ITEMSS.ITEM_NAME%TYPE;
 D_PRICE ITEMSS.PRICE%TYPE ;
BEGIN
UPDATE ITEMSS SET PRICE=15000 WHERE ITEM_NAME='EARPODS';
COMMIT;
DBMS_OUTPUT.PUT_LINE('VALUE UPDATED');
DELETE ITEMSS WHERE ITEM_NAME='ALEXA';
COMMIT;
DBMS_OUTPUT.PUT_LINE('VALUE DELETED');
SELECT ITEM_NO,ITEM_NAME,PRICE INTO D_ITEM_NO,D_ITEM_NAME,D_PRICE FROM ITEMSS WHERE ITEM_NO=2;
DBMS_OUTPUT.PUT_LINE('DETAILS');
DBMS_OUTPUT.PUT_LINE('ITEM NO.:' ||D_ITEM_NO);
DBMS_OUTPUT.PUT_LINE('ITEM NAME:' ||D_ITEM_NAME);
DBMS_OUTPUT.PUT_LINE('PRICE:' ||D_PRICE);
END;
/
